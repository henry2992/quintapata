<!-- Survey -->
<div class="containers">
  
 
  <%= form_tag surveys_create_path  do %>

    <%= label_tag(:name, "Nombre:") %>
    <%= text_field_tag(:name) %>

    <%= label_tag(:email, "Email:") %>
    <%= text_field_tag(:email) %>

    <%= label_tag(:phone, "Telefono:") %>
    <%= text_field_tag(:name) %>

    <%= label_tag(:company, "Company:") %>
    <%= text_field_tag(:company) %>

    <%= label_tag(:services, "Servicios:") %>

    <% services = ['Veterinaria' , 'Peluqueria']%>

    <% services.each do |item| %>
      <br>
      <tr>
        <td><%= check_box_tag "items[]", item%></td>
        <td><%= item %></td>
      </tr>
    <% end %>
    <br>
    <%= submit_tag("Create") %>
  <% end %>

</div>



